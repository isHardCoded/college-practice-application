<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Authorization" Height="450" Width="522">
    <Grid RenderTransformOrigin="0.529,0.482">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center"  TextAlignment="Center" FontSize="20" FontWeight="Bold" TextWrapping="Wrap" Margin="0 0 0 30"><Run Language="ru-ru" Text="Авторизация"/></TextBlock>
            <Label>Логин:</Label>
            <TextBox x:Name="login" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" Width="150" />
            <Label>Пароль:</Label>
            <TextBox x:Name="password" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" Width="150" />
            <Button Content="Вход" HorizontalAlignment="Center" Width="150" Margin="0 30 0 0" Click="auth_button"/>
            <Button Content="Регистрация"  HorizontalAlignment="Center" Margin="0 10 0 0" Width="150" Click="Button_Click"/>
        </StackPanel>      
    </Grid>
</Window>
