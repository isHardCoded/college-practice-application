<Page x:Class="DemoEx.views.auth.Admin.Admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoEx.views.auth.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Admin">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontWeight="Bold" FontSize="20">Администратор</TextBlock>
            <TextBlock HorizontalAlignment="Center" Foreground="Gray" Margin="0 5 0 0">Вход в систему</TextBlock>
            <Label FontSize="12" Margin="0 20 0 -2">Логин</Label>
            <TextBox x:Name="Login"></TextBox>
            <Label FontSize="12" Margin="0 0 0 -2">Пароль</Label>
            <PasswordBox PasswordChar="*" x:Name="Password"></PasswordBox>
            <Button HorizontalAlignment="Center" Click="Auth_CLick" Width="100" Margin="0 20 0 0">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
