<Page x:Class="DemoEx.views.auth.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoEx.views.auth"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontWeight="Bold" FontSize="20">Вход в приложение</TextBlock>
            <TextBlock HorizontalAlignment="Center" Foreground="Gray" Margin="0 5 0 0">Выберите роль</TextBlock>
            <StackPanel Margin="0 20 0 0">
                <Button Click="AdminButton_Click">Администратор</Button>
                <Button Click="UserButton_Click" Margin="0 5 0 0">Пользователь</Button>
                <Button Click="PerformerButton_Click" Margin="0 5 0 0">Исполнитель</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
