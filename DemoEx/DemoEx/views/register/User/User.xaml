<Page x:Class="DemoEx.views.register.User.User"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoEx.views.register.User"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="User">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontWeight="Bold" FontSize="20">Регистрация</TextBlock>
            <TextBlock HorizontalAlignment="Center" Foreground="Gray" Margin="0 5 0 0">Пользователь</TextBlock>
            <Label FontSize="12" Margin="0 20 0 -2">Имя</Label>
            <TextBox x:Name="Name"></TextBox>
            <Label FontSize="12">Фамилия</Label>
            <TextBox x:Name="Surname"></TextBox>
            <Label FontSize="12">Логин</Label>
            <TextBox x:Name="Login"></TextBox>
            <Label FontSize="12" Margin="0 0 0 -2">Пароль</Label>
            <PasswordBox PasswordChar="*" x:Name="Password"></PasswordBox>
            <Button HorizontalAlignment="Center" Click="Register_CLick" Width="120" Margin="0 20 0 0">Зарегистрироваться</Button>
        </StackPanel>
    </Grid>
</Page>
